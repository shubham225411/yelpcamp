<% layout('layouts/boilerplate')%>
    <h1>HOME! YELP CAMP!</h1>
    <%- include("./partials/search") %> 

        <% for( let camp of camps ) { %>
            <div class="card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=camp.images[0]? camp.images[0].url :''%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title text-dark"><%= camp.title %> </h5>
                            <p class="card-text text-dark"><%= camp.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
                        </div>
                    </div>
                </div>
                 <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger container">Delete</button>
                </form>
            </div>
        <% } %>
