<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/cs/stars.css" />
    <!-- <h3 class="text-light"><%= messages %> </h3> -->

    <div class="container">
        <div class="row">
            <div class="col-8">
                <div id="campgroundCarousel" class="carousel slide" data-ride="carousel" >
                    <div class="carousel-inner" >
                        <% campground.images.forEach((img, i) => {  %>
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <img src="<%= img.url%>" class="d-block w-100" alt="">
                        </div>
                        <% }) %>
        
                    </div>
                    <% if(campground.images.length > 1) {%>
                    <a class="carousel-control-prev" href="#campgroundCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#campgroundCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
                </div>
                <div class="card mb-3">
                    

                            <div class="card-body">
                                <h5 class="card-title text-dark">
                                    <%= campground.title%>
                                </h5>
                                <p class="card-text text-dark">
                                    <%= campground.description%>
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item text-muted">
                                    <%= campground.location%>
                                </li>
                                <li class="list-group-item text-dark">
                                    $<%= campground.price%>/night
                                </li>
                                <li class="list-group-item text-dark">
                                    <b>Posted by:</b> <strong>
                                        <%= campground.author.username %>
                                    </strong>
                                </li>
                            </ul>
                            <% if (currentUser.id===campground.author.id) { %>
                                <div class="card-body">
                                    <a class="card-link btn btn-info"
                                        href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                                    <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </div>

                                <% } %>

                                    <div class="card-footer text-muted">2 days ago</div>
                </div>
            </div>
            <% if (campground.reviews.length>0) { %>
                <div class="col-4" style="overflow: auto; height: 400px">
                    <h3 class="text-light">Total Reviews=<%= campground.reviews.length %>
                    </h3>
                    <!-- showing this sectio only if we have any reviews to show -->

                    <% for( let review of campground.reviews ) { %>
                        <div class="conatiner text-light d-flex flex-column">
                            <section class="card bg-dark mb-1 border border-secondary">
                                <p class="starability-result" data-rating="<%= review.rating%>">
                                    Rated:<%= review.rating%>stars
                                </p>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <%= review.author.username %>
                                </h6>
                                <p class="fw-normal">Review:<%= review.body %>
                                </p>

                                <div class="container mb-2">
                                    <form
                                        action="/campgrounds/<%= campground.id %>/reviews/<%= review.id %>?_method=DELETE"
                                        method="POST">
                                        <% if (review.author.equals(currentUser.id)) { %>
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                            <% } else{%>
                                                <button class="btn btn-sm btn-secondary">Delete</button>
                                                <% } %>
                                    </form>
                                </div>
                            </section>
                        </div>

                        <% } %>
                </div>
                <% } else{%>
                    <span class="d-inline text-light">
                        <h2>Add a Review</h2>
                    </span>
                    <% } %>
        </div>

        <div class="row">
            <div class="col-10">
                <form action="/campgrounds/<%= campground.id %>/reviews" method="POST" class="validated-form"
                    novalidate>
                    <!-- <div class="mb-3">
                        <label for="rating" class="form-label text-light">Rating</label>
                        <input type="range" min="1" max="5" class="form-range" name="rating" id="rating" required />
                    </div> -->

                    <fieldset class="starability-coinFlip">
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>

                    <div class="mb-3">
                        <label class="form-label text-light" for="body">Review</label>
                        <textarea class="form-control" name="body" id="body" cols="40" rows="5" required></textarea>
                    </div>
                    <button class="btn btn-success mb-4">Submit</button>
                </form>
            </div>
        </div>
    </div>